# Core
DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=true
DJANGO_PRODUCTION=false
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Optional security/HTTPS (enable carefully)
DJANGO_SECURE_SSL_REDIRECT=false
DJANGO_SECURE_PROXY_SSL=false
DJANGO_USE_X_FORWARDED_HOST=false

# CSRF trusted origins (only if serving on custom domain/https)
# DJANGO_CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
DJANGO_LOG_LEVEL=INFO

# API pagination
DJANGO_API_PAGE_SIZE=10

# --- Database ---
# If DATABASE_URL is set, Django uses it (Postgres recommended).
# If DATABASE_URl is not set, Django falls back to SQLite.

# SQLite fallback (default)
SQLITE_NAME=db.sqlite3

# Postgres (example)
# Format: postgresql://USER:PASSWORD@HOST:POORT/DBNAME
DATABASE_URL=

# Connection tuning
DB_CONN_MAX_AGE=60

# Set to 1 only when Postgres endpoint requires SSL
DB_SSL_REQUIRE=1

# Optional safety toggle for per-request transactions
DB_ATOMIC_REQUESTS=0
